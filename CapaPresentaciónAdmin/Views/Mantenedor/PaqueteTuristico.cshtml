
@{
    ViewBag.Title = "PaqueteTuristico";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Inicio Diseño HTML -->
<ol class="breadcrumb mb-4 mt-4">
    <li class="breadcrumb-item"><a href="index.html">Mantenimiento</a></li>
    <li class="breadcrumb-item active">Paquete Turístico</li>
</ol>
<div class="card">
    <div class="card-header">

        <i class="fas fa-users me-1"></i> Lista de Paquetes Turísticos


    </div>

    <div class="card-body">
        <div class="row">
            <div class="col-12">
                <button type="button" class="btn btn-success" onclick="abrirModal(null)">Crear Nuevo Paquete Turístico</button>

            </div>

        </div>
        <hr />
        <table id="tabla" class="display cell-border" style="width:100%">


            <thead>
                <tr>
                    <th>Descripcion</th>
                    <th>Activo</th>
                    <th></th>
                </tr>

            </thead>

        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="FormModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-bs-backdrop="static">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="exampleModalLabel">Paquete Turístico</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>


            </div>
            <div class="modal-body">

                <input id="txtid" type="hidden" value="0" />

                <div class="row g-1">


                    <div class="col-sm-6">
                        <label for="txtdescripcion" class="form-label">Descripción</label>
                        <input type="email" class="form-control" id="txtdescripcion" autocomplete="off">
                    </div>
                    <div class="col-sm-6">
                        <label for="cboactivo" class="form-label">Activo</label>
                        <select id="cboactivo" class="form-select">
                            <option value="1">Si</option>
                            <option value="0">No</option>
                        </select>
                    </div>
                </div>
                <!--Mensaje de alerta-->
                <div class="row mt-2">
                    <div class="col-12">

                        <div id="mensajeError" class="alert alert-danger" role="alert">
                            A simple danger alert-check it out!
                        </div>
                    </div>

                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>

                <button type="button" class="btn btn-primary" onclick="Guardar()">Guardar Cambios</button>
            </div>
        </div>
    </div>
</div>
<!-- Fin Diseño HTML -->

@section scripts{
    <script>
        var tabladata;
        var filaSeleccionada;

        tabladata = $("#tabla").DataTable({
            responsive: true,
            ordering: false,
            "ajax": {
                url: '@Url.Action("ListarPaquete", "Mantenedor")',
                type: "GET",
                dataType: "json"
            },
            "columns": [

                { "data": "Descripcion" },
                {
                    "data": "Activo", "render": function (valor) {
                        if (valor) {
                            return '<span class="badge bg-success">SÍ</span>'

                        } else {
                            return '<span class="badge bg-danger">NO</span'
                        }
                    }
                },
                {
                    "defaultContent": '<button type="button" class="btn btn-primary btn-sm btn-editar"><i class="fas fa-pen"></i></button>' +
                        '<button type="button" class="btn btn-danger btn-sm ms-2 btn-eliminar"><i class="fas fa-trash"></i></button>',
                    "orderable": false,
                    "searchable": false,
                    "width":"90px"
                }
            ],
            "language": {
               "url": "https://cdn.datatables.net/plug-ins/1.11.3/i18n/es_es.json"
            }

        });
        function abrirModal(json) {

            $("#txtid").val(0);
            $("#txtdescripcion").val("");
            $("#cboactivo").val(1);
            $("#mensajeError").hide();

            if (json != null) {

                $("#txtid").val(json.IdPaquete);
                $("#txtdescripcion").val(json.Descripcion);
                $("#cboactivo").val(json.Activo ==true ? 1 : 0); //Si es verdadero que devuelva el valor de 1...//

            }


            $("#FormModal").modal("show");
        }
        $("#tabla tbody").on("click", '.btn-editar', function () {

           filaSeleccionada = $(this).closest("tr");

            var data =  tabladata.row(filaSeleccionada).data();

            console.log(data)
            abrirModal(data)

        })
        $("#tabla tbody").on("click", '.btn-eliminar', function () {

            var paqueteseleccionado = $(this).closest("tr");

            var data = tabladata.row(paqueteseleccionado).data();

            swal({
                title: "¿Está seguro?",
                text: "¿Desea eliminar el paquete seleccionado?",
                type: "warning",
                showCancelButton: true,
                confirmButtonClass: "btn-primary",
                confirmButtonText: "Sí",
                cancelButtonText: "No",
                closeOnConfirm: true

            },
                function () {
                    jQuery.ajax({
                        url: '@Url.Action("EliminarPaquete","Mantenedor")',
                        type: "POST",
                        data: JSON.stringify({ id: data.IdPaquete }),
                        dataType: "json",
                        contentType: "application/json; charset=utf-8",
                        success: function (data) {
                            if (data.resultado) {
                                tabladata.row(paqueteseleccionado).remove().draw();
                            } else {
                                swal("No se pudo eliminar", data.mensaje, "error")
                            }
                        },
                        error: function (error) {
                            console.log(error)
                        }

                    });
                });
                    console.log(data);
        })

        function Guardar() {
            var Paquete = {
                IdPaquete: $("#txtid").val(),
                Descripcion: $("#txtdescripcion").val(),
                Activo: $("#cboactivo").val() == 1 ? true: false,

            }

            //Estructura Ajax para hacer el llamado de los métodos de home Controller

            jQuery.ajax({
                url: '@Url.Action("GuardarPaquete", "Mantenedor")',
                type: "POST",
                data: JSON.stringify({ objeto : Paquete }),
                dataType: "json",
                contentType: "application/json; charset=utf-8",
                success: function (data) {

                    $(".modal-body").LoadingOverlay("hide")

                    //PAQUETE NUEVO
                    if (Paquete.IdPaquete == 0) {

                        if (data.resultado != 0) {
                            Paquete.IdPaquete = data.resultado;
                            tabladata.row.add(Paquete).draw(false);
                            $("#FormModal").modal("hide");
                        }
                        else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                    //PAQUETE EDITAR
                    else {
                        if (data.resultado) {
                            tabladata.row(filaSeleccionada).data(Paquete).draw(false);
                            filaSeleccionada = null;
                            $("#FormModal").modal("hide");
                        } else {
                            $("#mensajeError").text(data.mensaje);
                            $("#mensajeError").show();
                        }
                    }
                },
                error: function (error) {
                    $("#mensajeError").LoadingOverlay("hide");
                    $("#mensajeError").text("Error Ajax");
                    $("#mensajeError").show();

                },
               beforeSend: function () {
                   $(".modal-body").LoadingOverlay("show", {
                       imageResizeFactor: 2,
                       text: "Cargando....",
                       size: 14
                   })
                }

            });
        }





    </script>
}


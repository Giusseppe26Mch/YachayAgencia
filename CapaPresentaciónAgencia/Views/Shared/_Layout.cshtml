<script>
    function MostrarCantidadBolsa() {
        if ($("#cantidadbolsa").length > 0) {
            jQuery.ajax(
                {
                    url: '@Url.Action("CantidadEnBolsa","Tienda")',
                    type: "GET",
                    dataType: "json",
                    contentType: "application/json; charset =utf-8",
                    success: function (data) {
                        $("#cantidadbolsa").text(data.cantidad);
                    }
                });
        }
    }





